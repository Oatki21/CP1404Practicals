<Widget>:
    canvas.before:
        Rectangle:
            size: self.size
    color: 0, 0, 0.7, 1

<Button>:
#    font_name: 'BuxtonSketch.ttf'
    font_size: 56
    background_normal: ''
    background_down: 'atlas://data/images/defaulttheme/button'
    canvas.after:
        Color:
            rgba: 0, 0, 0, 1
        Line:
            rectangle: self.x + 1, self.y + 1, self.width - 1, self.height - 1

BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_miles
            text: '34'
            font_size: 48
            on_text: app.handle_calculate()
            rgba: 0, 0, 0, 1
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.25
            Button:
                text: 'Up'
                on_press: app.handle_increment(1)
            Button:
                text: 'Down'
                on_press: app.handle_increment(-1)
    Label:
        text: 'Convert m to km'
    Label:
        id: output_label
        font_size: 48
        text: '54.717'
        color: (1, 1, 1, 1)